@model IEnumerable<ZTBusService.Models.busStop>

@{
    ViewBag.Title = "Bus Stop Listing";
}

<h2>Bus Stop Listing</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Location", "Index", new { orderBy = "location" })
        </th>
        <th>
            @Html.ActionLink("Bus Stop Number", "Index", new { orderBy = "busStopNumber" })
        </th>
        <th>
            Location Hash
        </th>
        <th>
            Going Down Town
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.busStopNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.locationHash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.goingDowntown)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.busStopNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.busStopNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.busStopNumber }) |
            @Html.ActionLink("Bus Schedule", "RouteSelector", new { id = item.busStopNumber })
        </td>
    </tr>
}

</table>
