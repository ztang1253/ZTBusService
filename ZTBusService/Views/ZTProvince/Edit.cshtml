@model ZTBusService.Models.province

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>province</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.provinceCode)

        <div class="form-group">
            @Html.LabelFor(model => model.name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.countryCode, "countryCode", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("countryCode", String.Empty)
                @Html.ValidationMessageFor(model => model.countryCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.taxCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taxCode)
                @Html.ValidationMessageFor(model => model.taxCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.taxRate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.taxRate)
                @Html.ValidationMessageFor(model => model.taxRate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.capital, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.capital)
                @Html.ValidationMessageFor(model => model.capital)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
